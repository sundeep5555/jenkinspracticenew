pipeline {
    agent any

    tools {
        jdk 'Java-17'
        maven 'Maven-3'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'cd demoapp && mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                sh 'cd demoapp && mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'cd demoapp && mvn package'
            }
        }

        stage('Archive Artifact') {
            steps {
                archiveArtifacts artifacts: 'demoapp/target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo '✅ Maven build successful'
        }
        failure {
            echo '❌ Maven build failed'
        }
    }
}

